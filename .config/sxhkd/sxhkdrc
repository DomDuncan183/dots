#
# wm independent hotkeys
#

# terminal emulator
super + x
	alacritty

super + z
	thunar

super + v
	flatpak run org.mozilla.firefox

super + r
	bspc rule -a Alacritty -o state=floating rectangle=1280x720+1080+360 && alacritty

super + e
	bspc rule -a Thunar -o state=floating rectangle=1280x720+1080+360 && thunar

# program launcher
super + d
	~/.config/rofi/scripts/launcher_t2

super + shift + P
	~/.config/rofi/scripts/powermenu_t2

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# audio
#

XF86AudioRaiseVolume
	wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+

XF86AudioLowerVolume
	wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%-

XF86AudioMute
	wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

super + shift + S
	flameshot gui

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}
 
super + button{4,5}
	bspc desktop {prev,next} -f

super + control + {h,j,k,l}
	bspc desktop {prev,prev,next,next} -f

super + control + alt + {h,l}
	bspc node -d {prev,next}

# close and kill
super + {_,shift + }c
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest window
super + g
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
#super + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }b
	bspc node -f {next,prev}.local.!hidden.window

super + p
	bspc node @parent -R 90

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# move/resize
#

super + alt + {h,j,k,l}
    {bspc node @parent/second -z left -100 0; \
    bspc node @parent/first -z right -100 0, \
    bspc node @parent/second -z top 0 +100; \
    bspc node @parent/first -z bottom 0 +100, \
    bspc node @parent/first -z bottom 0 -100; \
    bspc node @parent/second -z top 0 -100, \
    bspc node @parent/first -z right +100 0; \
    bspc node @parent/second -z left +100 0}

#super + alt + {h,j,k,l}
#  bspc node -z {left -100 0 || bspc node -z right -100 0, \
#                bottom 0 100 || bspc node -z top 0 100,\
#                top 0 -100 || bspc node -z bottom 0 -100,\
#                right 100 0 || bspc node -z left 100 0}

# move a floating window
super + control + shift + {h,j,k,l}
	bspc node -v {-100 0,0 100,0 -100,100 0}
